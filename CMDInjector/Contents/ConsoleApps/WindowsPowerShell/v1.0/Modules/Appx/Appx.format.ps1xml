<?xml version="1.0" encoding="utf-8" ?>
 
<Configuration>
  <ViewDefinitions>
      <View>
          <Name>TableView</Name>
          <ViewSelectedBy>
              <TypeName>AppxDeploymentEventLog</TypeName>
          </ViewSelectedBy>
          <TableControl>
              <TableHeaders>
                  <TableColumnHeader>
                      <Label>Time</Label>
                      <Width>25</Width>
                  </TableColumnHeader>
                  <TableColumnHeader>
                      <Label>ID</Label>
                      <Width>12</Width>
                  </TableColumnHeader>
                  <TableColumnHeader>
                      <Label>Message</Label>
                  </TableColumnHeader>
              </TableHeaders>
              <TableRowEntries>
                  <TableRowEntry>
                      <TableColumnItems>
                          <TableColumnItem>
                              <ScriptBlock>$_.timecreated</ScriptBlock>
                          </TableColumnItem>
                          <TableColumnItem>
                              <ScriptBlock>$_.id</ScriptBlock>
                          </TableColumnItem>
                          <TableColumnItem>
                              <ScriptBlock>$_.message</ScriptBlock>
                          </TableColumnItem>
                      </TableColumnItems>
                      <Wrap/>
                  </TableRowEntry>
              </TableRowEntries>
          </TableControl>
      </View>
      <View>
          <Name>TableView</Name>
          <ViewSelectedBy>
              <TypeName>Microsoft.Windows.Appx.PackageManager.Commands.AppxPackage</TypeName>
          </ViewSelectedBy>
          <ListControl>
              <ListEntries>
                  <ListEntry>
                      <ListItems>
                          <ListItem>
                              <PropertyName>Name</PropertyName>
                          </ListItem>
                          <ListItem>
                              <PropertyName>Publisher</PropertyName>
                          </ListItem>
                          <ListItem>
                              <PropertyName>Architecture</PropertyName>
                          </ListItem>
                          <ListItem>
                              <PropertyName>ResourceId</PropertyName>
                          </ListItem>
                          <ListItem>
                              <PropertyName>Version</PropertyName>
                          </ListItem>
                          <ListItem>
                              <PropertyName>PackageFullName</PropertyName>
                          </ListItem>
                          <ListItem>
                              <PropertyName>InstallLocation</PropertyName>
                          </ListItem>
                          <ListItem>
                              <PropertyName>IsFramework</PropertyName>
                          </ListItem>
                          <ListItem>
                              <PropertyName>PackageFamilyName</PropertyName>
                          </ListItem>
                          <ListItem>
                              <PropertyName>PublisherId</PropertyName>
                          </ListItem>
                          <ListItem>
                              <PropertyName>PackageUserInformation</PropertyName>
                              <ItemSelectionCondition>
                                  <ScriptBlock>($_.PackageUserInformation.Count -gt 0)</ScriptBlock>
                              </ItemSelectionCondition>
                          </ListItem>
                          <ListItem>
                            <PropertyName>IsResourcePackage</PropertyName>
                          </ListItem>
                          <ListItem>
                            <PropertyName>IsBundle</PropertyName>
                          </ListItem>
                          <ListItem>
                            <PropertyName>IsDevelopmentMode</PropertyName>
                          </ListItem>
                          <ListItem>
                            <PropertyName>Dependencies</PropertyName>
                            <ItemSelectionCondition>
                              <ScriptBlock>($_.Dependencies.Count -gt 0)</ScriptBlock>
                            </ItemSelectionCondition>
                          </ListItem>
                      </ListItems>
                  </ListEntry>
              </ListEntries>
          </ListControl>
      </View>
  </ViewDefinitions>
</Configuration>
